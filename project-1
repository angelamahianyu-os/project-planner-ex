    <script>
        // Function to toggle task visibility
        function toggleTasks(phaseId) {
            const tasks = document.getElementById(phaseId);
            tasks.classList.toggle('show');
        }

        // Function to calculate and update progress bar
        function updateProgress() {
            const totalTasks = document.querySelectorAll('input[type="checkbox"]').length;
            const completedTasks = document.querySelectorAll('input[type="checkbox"]:checked').length;
            const progressPercentage = (completedTasks / totalTasks) * 100;

            const progressBar = document.getElementById('main-progress');
            progressBar.style.width = progressPercentage + '%';

            // Save state to localStorage
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach((checkbox, index) => {
                localStorage.setItem(checkbox.id, checkbox.checked);
            });
        }

        // Function to load saved state from localStorage
        function loadProgress() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach((checkbox) => {
                const isChecked = localStorage.getItem(checkbox.id) === 'true';
                checkbox.checked = isChecked;
            });
            updateProgress(); // Update the bar after loading
        }

        // Load progress when the page starts
        window.onload = loadProgress;
    </script>
